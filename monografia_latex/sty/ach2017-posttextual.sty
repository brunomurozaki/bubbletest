% Split the References (works cited in text) and the Bibliography
% (works NOT cited in text) in separate pages.

\providecommand{\bibfile}{}
\providecommand{\nocitebibfile}{}
\providecommand{\nocitetexfile}{main.nocite}
\providecommand{\nocitelist}{}

%---------------------------------------------------------------------

\newcommand{\referencesandbibliography}{%
\ifthenelse{\not\equal{\nocitebibfile}{}}
{
	\IfFileExists{\nocitetexfile}
	{% then
		\ifthenelse{\not\equal{\bibfile}{}}
		{\bibliography{\bibfile}}
		{}

		\renewcommand{\bibname}{Obras Consultadas}
		% This alternative MUST BE avoided: \ABNTbibliographyname{Bibliografia}
		\include{\nocitetexfile}
	}{% else
		\ifthenelse{\not\equal{\nocitelist}{}}
		{\bibliography{\nocitebibfile}\nocite{\nocitelist}}
		{}
	}
}
{
	\ifthenelse{\not\equal{\bibfile}{}}
	{\bibliography{\bibfile}}
	{}
}
}

